<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv='content-type' content='text/html;charset=utf-8'/>
    <link href='%PATH_CSS%/mobile/jquery.mobile{$_compress_files_suffix_}.css' rel='stylesheet' type='text/css' media='screen, projection'/>
    <link href='%PATH_CSS%/mobile/essential{$_compress_files_suffix_}.css' rel='stylesheet' type='text/css' media='screen, projection'/>
    <link href='%PATH_CSS%/mobile/application{$_compress_files_suffix_}.css' rel='stylesheet' type='text/css' media='screen, projection'/>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.6.4{$_compress_files_suffix_}.js"></script>
    <script type="text/javascript">
      if (typeof jQuery == 'undefined')
        document.write(unescape("%3Cscript src='%PATH_JS%/core/jquery.1.6.4{$_compress_files_suffix_}.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript" src="http://code.jquery.com/mobile/1.0/jquery.mobile-1.0{$_compress_files_suffix_}.js"></script>
    <script type="text/javascript">
      if (typeof jQuery == 'undefined')
        document.write(unescape("%3Cscript src='%PATH_JS%/mobile/jquery.mobile.1.0{$_compress_files_suffix_}.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <title>{$_title_}</title>
  </head>
  <body>
    <div data-role="page" data-theme="d">
      <div data-role="header">
        <h1>{$_title_}</h1>
        {if $USER_RIGHT == 0}
          <a href="/session/create" class="ui-btn-right">{$lang.global.login}</a>
        {else}
          <a href="/session/destroy" class="ui-btn-right">{$lang.global.logout}</a>
        {/if}
      </div><!-- /header -->
      <div data-role="navbar">
        <ul>
          <li><a href='/blog' {if $smarty.get.section == 'blog'}class="ui-btn-active"{/if}>{$lang.global.blog}</a></li>
          <li><a href='/gallery' {if $smarty.get.section == 'gallery'}class="ui-btn-active"{/if}>{$lang.global.gallery}</a></li>
          <li><a href='/search' {if $smarty.get.section == 'search'}class="ui-btn-active"{/if}>{$lang.global.search}</a></li>
          <li><a href='/calendar' {if $smarty.get.section == 'calendar'}class="ui-btn-active"{/if}>{$lang.global.calendar}</a></li>
        </ul>
      </div><!-- /navbar -->
      <div data-role="content">
        <section id="{$smarty.get.section}">
          {if $_flash_type_}
            <div id='js-flash_message'>
              <div class='{$_flash_type_}' id='js-flash_{$_flash_type_}'>
                <h4>{$_flash_headline_}</h4>
                <p>{$_flash_message_}</p>
              </div>
            </div>
          {/if}
          {$_content_}
        </section>
      </div><!-- /content -->
      <div data-role="footer" class="ui-bar">
        <div data-role="controlgroup" data-type="horizontal">
          <a id='top' data-role="button" class="ui-btn-right" data-icon="arrow-u">Top</a>
          <a href='/disclaimer' {if $smarty.get.section == 'content' && $_request_id_ == 1}class="ui-btn-active"{/if}>{$lang.global.disclaimer}</a>
          <a href='?mobile=0' data-ajax="false">{$lang.global.view.web}</a>
        </div>
      </div><!-- /footer -->
    </div><!-- /page -->
    <script type="text/javascript">
      $('#top').live('click', function(e){
        $('body').clearQueue();
        $.mobile.silentScroll(0);
      });

      $(document).ready(function() {
        $('img').each(function() {
          var iNewWidth = screen.width - 30;
          var iNewHeight =  iNewWidth / $(this).width() * $(this).height();
          if($(this).width() > iNewWidth) {
            $(this).attr('width', iNewWidth);
            $(this).attr('height', iNewHeight);
          }
        });
      });
    </script>
    <script type='text/javascript' src='%PATH_JS%/core/scripts{$_compress_files_suffix_}.js'></script>
    {include file="_google.tpl"}
  </body>
</html>