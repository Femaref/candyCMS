<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv='content-type' content='text/html;charset=utf-8'/>
    <link href='%PATH_CSS%/core/essential{$_compress_files_suffix_}.css' rel='stylesheet' type='text/css' media='screen, projection'/>
    <link href='%PATH_CSS%/mobile/jquery.mobile{$_compress_files_suffix_}.css' rel='stylesheet' type='text/css' media='screen, projection'/>
    <link href='%PATH_CSS%/mobile/mobile{$_compress_files_suffix_}.css' rel='stylesheet' type='text/css' media='screen, projection'/>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery{$_compress_files_suffix_}.js"></script>
    <script type="text/javascript">
      if (typeof jQuery == 'undefined')
        document.write(unescape("%3Cscript src='%PATH_JS%/core/jquery.1.6.2{$_compress_files_suffix_}.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript" src="%PATH_JS%/core/scripts{$_compress_files_suffix_}.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/mobile/1.0/jquery.mobile-1.0{$_compress_files_suffix_}.js"></script>
    <script type="text/javascript">
      if (typeof jQuery == 'undefined')
        document.write(unescape("%3Cscript src='%PATH_JS%/mobile/jquery.mobile.1.0{$_compress_files_suffix_}.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <title>{$_title_}</title>
  </head>
  <body>
    <div data-role="page" data-add-back-btn="true" data-theme="d">
      <div data-role="header">
        <h1>{$_title_}</h1>
      </div><!-- /header -->
      <div data-role="navbar">
        <ul>
          <li><a href='/blog' {if $smarty.get.section == 'blog'}class="ui-btn-active"{/if}>{$lang.global.blog}</a></li>
          <li><a href='/gallery' {if $smarty.get.section == 'gallery'}class="ui-btn-active"{/if}>{$lang.global.gallery}</a></li>
          <li><a href='/search' {if $smarty.get.section == 'search'}class="ui-btn-active"{/if}>{$lang.global.search}</a></li>
        </ul>
      </div><!-- /navbar -->
      <div data-role="content">
        {if $_flash_type_}
          <div id='js-flash_message'>
            <div class='{$_flash_type_}' id='js-flash_{$_flash_type_}'>
              <h4>{$_flash_headline_}</h4>
              <p>{$_flash_message_}</p>
            </div>
          </div>
        {/if}
        {$_content_}
      </div><!-- /content -->
      <div data-role="footer" class="ui-bar">
        <div data-role="controlgroup" data-type="horizontal">
          <a href='/disclaimer' {if $smarty.get.section == 'content' && $_request_id_ == 1}class="ui-btn-active"{/if}>{$lang.global.disclaimer}</a>
          <a href='/sitemap' {if $smarty.get.section == 'sitemap'}class="ui-btn-active"{/if}>{$lang.global.sitemap}</a>
          <a href='?mobile=0' data-ajax="false" {if $smarty.get.section == 'content' && $_request_id_ == 1}class="ui-btn-active"{/if}>{$lang.global.webview}</a>
        </div>
      </div><!-- /footer -->
    </div><!-- /page -->
    {include file="_google.tpl"}
  </body>
</html>