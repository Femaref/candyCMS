<section id="image">
  {if !$i}
    <div class='error' id='js-error' title='{$lang.error.missing.entry}'>
      <p>{$lang.error.missing.entry}</p>
    </div>
  {else}
    <h1>{$i.file}</h1>
    {if isset($f.content)}
      <h3>{$i.content}</h3>
    {/if}
    <img src="%PATH_UPLOAD%/gallery/{$i.album_id}/popup/{$i.file}" alt="{$i.file}" />
  {/if}
</section>